import Foundation

//Решить квадратное уравнение
let a = 6.0
let b = 10.0
let c = 4.0
var x1 = 0.0
var x2 = 0.0

///Формула нахождения дискриминанта
var D = pow(b,2)-4*a*c

if (D<0)
{print("Корней нет")}
if (D==0)
{x1 = (-b+sqrt(D))/(2*a)
    print("Один корень: ",x1)}
if (D>0)
{x1 = (-b+sqrt(D))/(2*a)
x2 = (-b-sqrt(D))/(2*a)
print("Два корня: ",x1, x2)}

// Даны катеты прямоугольного треугольника. Найти площадь, периметр и гипотенузу треугольника.
let catetAB = 8.0
let catetAC = 10.0

let S = (catetAB * catetAC) / 2
let hypotenuseCB = sqrt(pow(catetAB,2) + pow(catetAC,2))
let Perimetr = catetAB + catetAC + hypotenuseCB

print("Периметр треугольника = \(Perimetr)")
print("Гипотенуза треугольника = \(hypotenuseCB)")
print("Площадь треугольника = \(S)")

// Пользователь вводит сумму вклада в банк и годовой процент. Найти сумму вклада через 5 лет.
var deposit = 100000.0
var percent = 25.0
percent = percent / 100
var yearOne = deposit + (deposit * percent)
var yearTwo = yearOne + (yearOne * percent)
var yearThree = yearTwo + (yearTwo * percent)
var yearFour = yearThree + (yearThree * percent)
var yearFive = yearFour + (yearFour * percent)
print("Через 5 лет сумма вклада будет = \(yearFive)")
