import Foundation

//1. Написать функцию, которая определяет, четное число или нет.

let number = 10
if number % 2 == 0
{ print("чётное") }
if number % 2 > 0
{ print("нечётное") }
print(".............................")

//2. Написать функцию, которая определяет, делится ли число без остатка на 3.

let numeral = 9
if numeral % 3 == 0
{ print("делится без остатка на 3") }
if numeral % 3 > 0
{ print("делится с остатком на 3") }
print(".............................")

//3. Создать возрастающий массив из 100 чисел.

var oneHundred: Array<Int> = []
for index in 1...100{ oneHundred.append(index) }
print(oneHundred)

//4. Удалить из этого массива все четные числа и все числа, которые не делятся на 3.

var delete = oneHundred.filter {$0 % 2 != 0 && $0 % 3 == 0}
print(delete)
print(".............................")

//5. * Написать функцию, которая добавляет в массив новое число Фибоначчи, и добавить при помощи нее 50 элементов.
//Числа Фибоначчи определяются соотношениями Fn = Fn - 1 + Fn - 2.

func fibonacciArray(_ n: Int) -> [Double]
{var fibonacci: [Double] = [1, 1]
(2...n).forEach
{ indexNew in fibonacci.append(fibonacci[indexNew - 1] + fibonacci[indexNew - 2]) }
return fibonacci }

print(fibonacciArray(100))
print(".............................")

